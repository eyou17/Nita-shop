<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Orders Table</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
  <a style="text-decoration: none; color: black;" href="/admin_home"><h2 class="mb-4 text-center">Orders</h2></a>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Customer</th>
          <th>Shoes ID</th>
          <th>Shoes Name</th>
          <th>Shoes Price</th>
          <th>Shoes Category</th>
          <th>Quantity</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        
        <!-- Example rows -->
         <% if(locals.orders) {%>
         <% orders.forEach(order => {%>
            <tr>
                <td> <%= order.id %> </td>
                <td><%= order.customer %></td>
                <td><%= order.shoes_id %></td>
                <td><%= order.shoes_name %></td>
                <td><%= order.shoes_price %></td>
                <td><%= order.shoes_catagory%></td>
                <td><%= order.quantity %></td>
                <td><form action="/sell" method="post">
                  <input type="hidden" name="item" value="<%= order.id %>" required>
                  <input type="hidden" name="shoes_id" value="<%= order.shoes_id %>" required>
                  <input type="hidden" name="quantity" value="<%= order.quantity %>" required>
                  <button type="submit" class="btn btn-success"><%= order.status %></button>
                </form></td>
        </tr>
        <%  }); %>
        <% } %>
        
       
       
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
