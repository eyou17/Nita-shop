<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">

    </head>
<body>

    <% if(locals.user){ %>
        <% const email = user.email %>
        <% } %>
    
  <%- include("partial/admin_header.ejs") %>

  <div style="display: flex;">
    <form  action="/admin_home" method="get" >
    <button class="btn btn-info" type="submit">all</button>
  </form>

  <form   action="/admin_men" method="get" >
    <button class="btn btn-info" type="submit">men</button>
  </form>
  <form  action="/admin_women" method="get" >
    <button class="btn btn-info" type="submit">women</button>
  </form>
  <form  action="/admin_kid" method="get" >
    <button class="btn btn-info" type="submit">kid</button>
  </form>

  
  
    
  </div>
  
    

  
    <div class="row">
       
        <% data.forEach(element => {%>
            
            <div class="con col-sm-12 col-md-6 col-lg-4" > 
                <div class="card shadow-sm"> 
                    <img src="../uploads/<%=element.shoes_image %>" alt="" max-width="100%" height="auto">
                    <!-- <svg aria-label="Placeholder: Thumbnail" class="bd-placeholder-img card-img-top" height="225" preserveAspectRatio="xMidYMid slice" role="img" width="100%" xmlns="http://www.w3.org/2000/svg">
                        <title></title>
                        <rect width="100%" height="100%" fill="#55595c"></rect>
                        <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                    
                    </svg>  -->
                    
                    <div class="card-body"> 
                        
                       
                        
                        <p class="card-text"><button type="button" class="btn btn-info"><%=element.shoes_number %></button></p> 
                        <p class="card-text"> <button type="button" class="btn btn-info"><%=element.shoes_price %>$</button></p> 
                        <div class="d-flex justify-content-between align-items-center"> 
                            <div class="btn-group"> 
                                
                                 <form action="/delet_shoe" method="post">
                                    <input type="hidden" name="item" value="<%= element.id %>" required>
                                    <button type="submit"  class="btn btn-sm btn-outline-secondary">delet</button> 
                               
                                </form>
                                
                            </div> 
                            <small class="text-body-secondary"><%=element.shoes_catagory %></small> 
                             </div> 
                    </div> 
                </div> 
    </div>

      <%  }); %>
    </div>

    
   


     <%- include('partial/admin_footer') %>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>