                <% if(locals.success){ %>
                    <h3 style="background-color: rgb(94, 211, 94); color: red;"><%= success %></h3>
                    <% } %>
                <h3>Register Shoes</h3>
                 <form action="/register_shoe" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
      <label for="shoe_name">Name</label>
      <input type="text" name="shoe_name" class="form-control" placeholder="Shoe name" required>
    </div>

    <div class="form-group mb-3">
      <label for="shoe_color">Color</label>
      <input type="text" name="shoe_color" class="form-control" placeholder="Shoe color" required>
    </div>

    <div class="form-group mb-3">
      <label for="shoe_price">Price</label>
      <input type="text" name="shoe_price" class="form-control" placeholder="Price" required>
    </div>

    <div class="form-group mb-3">
      <label for="shoe_number">Number</label>
      <input type="text" name="shoe_number" class="form-control" placeholder="Number" required>
    </div>
    <div class="form-group mb-3">
      <label for="shoe_number">Catagory</label>
      <input type="text" name="shoe_catagory" class="form-control" placeholder="catagory" required>
    </div>

    <div class="form-group mb-3">
      <label for="image">Upload Image</label>
      <input type="file" name="image" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>


