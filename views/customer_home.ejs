        </button>
    </form>
  </div>
  
    

  
    <div class="row">
       
        <% data.forEach(element => {%>
            
            <div class="con col-sm-12 col-md-6 col-lg-4" > 
                <div class="card shadow-sm" > 
                    <img src="../uploads/<%=element.shoes_image %>" alt="" max-width="100%" height="auto">
                   
                    
                    <div class="card-body"> 
                        
                       
                        
                        <p class="card-text"><button type="button" class="btn btn-info"><%=element.shoes_number %></button></p> 
                        <p class="card-text"> <button type="button" class="btn btn-info"><%=element.shoes_price %>$</button></p> 
                        <div class="d-flex justify-content-between align-items-center"> 
                            <div class="btn-group"> 
                                <form action="/cart" method="post">
                                    <input type="hidden" name="item" value="<%= element.id %>" required>
                                    <input type="number" name="quantity" value="1" min="1" max="10">
                                    <button type="submit"  class="btn btn-sm btn-outline-secondary">add to cart</button> 
                                    

                                </form>
                                
                            </div> 
                            <small class="text-body-secondary"><%=element.shoes_catagory %></small> 
                             </div> 
                    </div> 
                </div> 
    </div>

      <%  }); %>
    </div>

    
   


     <%- include('partial/customer_footer') %>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>