<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">

    </head>
<body>

    <% if(locals.user){ %>
        <% const email = user.email %>
        <% } %>
    
  <%- include("partial/customer_header.ejs") %>

  <div style="display: flex;">
    <form  action="/home" method="get" >
    <button class="btn btn-info" type="submit">all</button>
  </form>

  <form   action="/men" method="get" >
    <button class="btn btn-info" type="submit">men</button>
  </form>
  <form  action="/women" method="get" >
    <button class="btn btn-info" type="submit">women</button>
  </form>
  <form  action="/kid" method="get" >
    <button class="btn btn-info" type="submit">kid</button>
  </form>

  
  
    <form  action="/cart" method="get" >
       
        
                                   
        <button class="btn btn-info" value="submit" >
             <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 88 88" style="width: 60; height: 20px;">
    <g data-name="Shop cart">
